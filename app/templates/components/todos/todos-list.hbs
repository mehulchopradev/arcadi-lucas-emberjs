<div class="list-container">
    {{#each @todos as |todo|}}
        <div class="list-item" data-ref="todos-list.component.item">
            <Input @type="checkbox" @checked={{todo.done}} />
            <span data-ref="todo-list.component.title">{{capitalize todo.title}}</span>
            <span>({{moment-format todo.created 'MM-DD-YYYY'}})</span>
        </div>
    {{/each}}
    <div class="row">
        <button {{action "onClearCompletedTodos"}} disabled={{this.isDisabled}} data-ref="todo-list.component.clear-btn" type="button">Clear completed todos</button>
        <span data-ref="todo-list.component.donecount">({{this.doneCount}})</span>
    </div>
</div>